{
  "name": "njcdd-account-api",
  "version": "0.1.7",
  "description": "NJCDD REST API service to access Account services",
  "main": "build/src/server.js",
  "author": "Tony Amos <68511451+agile-anthony@users.noreply.github.com>",
  "private": true,
  "scripts": {
    "clean": "rimraf build",
    "test": "jest --config package.json",
    "dev": "nodemon ./src/server.ts",
    "build": "yarn clean && tsoa spec-and-routes && tsc",
    "build-patch": "yarn build && yarn version --patch",
    "build-minor": "yarn build && yarn version --minor",
    "build-major": "yarn build && yarn version --major",
    "start": "node build/src/server.js",
    "preversion": "yarn test",
    "postversion": "git push --tags && git push",
    "docker-deploy": "docker push anthonysw/njcdd-account-api:$npm_package_version && docker push anthonysw/njcdd-account-api:latest",
    "docker-release": "docker build . --no-cache --pull --progress plain --tag anthonysw/njcdd-account-api:$npm_package_version --tag anthonysw/njcdd-account-api:latest"
  },
  "dependencies": {
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "mongodb": "^5.0.0",
    "rimraf": "^4.1.2",
    "swagger-ui-express": "^4.6.0",
    "tslib": "^2.5.0",
    "tsoa": "^5.0.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.1",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.16",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.11",
    "jest": "^29.4.1",
    "jest-express": "^1.12.0",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "jest": {
    "bail": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "./jest.config.js"
    ],
    "testTimeout": 500,
    "testRegex": "((\\.|/)(test|spec))\\.(tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true
  }
}
