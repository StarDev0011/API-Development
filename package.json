{
  "name": "njcdd-api-mock",
  "version": "1.0.0",
  "description": "Simulates & documents NJCDD REST API Calls",
  "main": "build/src/server.js",
  "author": "Tony Amos <68511451+agile-anthony@users.noreply.github.com>",
  "private": true,
  "scripts": {
    "clean": "rimraf build",
    "test": "jest --config package.json",
    "dev": "nodemon ./src/server.ts",
    "build": "yarn clean && tsoa spec-and-routes && tsc",
    "start": "node build/src/server.js"
  },
  "dependencies": {
    "config": "^3.3.9",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "swagger-ui-express": "^4.6.0",
    "tslib": "^2.5.0",
    "tsoa": "^5.0.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.1",
    "@types/express": "^4.17.16",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.11",
    "jest": "^29.4.1",
    "jest-express": "^1.12.0",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.4"
  },
  "jest": {
    "bail": 1,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "./jest.config.js"
    ],
    "testTimeout": 500,
    "testRegex": "((\\.|/)(test|spec))\\.(tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true
  }
}
